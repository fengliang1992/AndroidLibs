<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar_layout" />

        <Button
            android:id="@+id/toast_btn1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="customToast"
            android:text="自定义Toast" />

        <Button
            android:id="@+id/toast_btn2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="loadingToast"
            android:text="全局的Toast" />

        <Button
            android:id="@+id/toast_btn3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="loadingToast2"
            android:text="适配各类手机全局吐司" />

    </LinearLayout>
</layout>